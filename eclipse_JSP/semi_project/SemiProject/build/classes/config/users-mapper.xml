<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace="패키지.파일명" : 어떤 클래스에서 일을 할지 지정 -->
<mapper namespace="mapper.UsersMapper"> 
	<resultMap type="dto.UsersDTO" id="users">
		<id column="user_number" property="userNumber" />
		<result column="login_ID" property="loginId" />
		<result column="nick_name" property="nickName" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="pw_update_time" property="pwUpdateTime" />
		<result column="user_name" property="userName" />
		<result column="user_email" property="userEmail" />
	</resultMap>

<!-- 
resultType : select는 조회 결과 resultType은 그 select 조회 결과를 어떤 타입으로 주는지
Type 확인 : https://mybatis.org/mybatis-3/ko/configuration.html#typeAliases
resultType="dto.UsersDTO" : DTO에 선언한 필드의 타입들 그대로 받는

id="" : 해당 태그가 무엇인지 구분하기 위한 id값
 -->
	<select id="selectAllUsers" resultMap="users">
		select * from users
	</select>
	
		<!-- 로그인 아이디와 비밀번호로 사용자 정보를 가져오는 쿼리 -->
	<select id="selectUserLogin" parameterType="map" resultMap="users">
		SELECT * FROM users
		WHERE login_id = #{loginId} AND password = #{password}
	</select>
</mapper>