<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">

<!-- MyBatis 설정 파일 -->
<configuration>
  
  <!-- 환경 설정 (environments): 여러 데이터베이스 환경 지원 -->
  <environments default="development">
    <!-- development 환경 설정 -->
    <environment id="development">
      <!-- 트랜잭션 관리 설정 -->
      <!-- type="JDBC": JDBC의 기본 트랜잭션 사용 -->
      <transactionManager type="JDBC"/>

      <!-- 데이터 소스 설정 -->
      <!-- type="POOLED": 연결 풀(Connection Pool) 사용 -->
      <dataSource type="POOLED">
        <!-- 데이터베이스 드라이버 클래스 -->
        <property name="driver" value="oracle.jdbc.OracleDriver"/>
        <!-- 데이터베이스 연결 URL -->
        <property name="url" value="jdbc:oracle:thin:@nam3324.synology.me:32800/xe"/>
        <!-- 데이터베이스 사용자 이름 -->
        <property name="username" value="C##KH2"/>
        <!-- 데이터베이스 비밀번호 -->
        <property name="password" value="123456"/>
      </dataSource>
    </environment>
  </environments>

  <!-- 매퍼 파일 설정 (mappers): SQL 매핑 파일 등록 -->
  <mappers>
    <!-- users-mapper.xml 매퍼 파일 등록 -->
    <mapper resource="config/users-mapper.xml"/>
    <!-- boards-mapper.xml 매퍼 파일 등록 -->
    <mapper resource="config/boards-mapper.xml"/>
  </mappers>

</configuration>
